<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" 
            android:paddingTop="12px" 
            android:paddingBottom="12px" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@drawable/border_style_bottom">
                <Switch android:text="显示隐藏应用" 
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px" 
                android:textSize="16px" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:id="@+id/hideAppSwitch" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" 
            android:paddingTop="12px" 
            android:paddingBottom="12px" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@drawable/border_style_bottom">
                <Switch android:text="时间显示精细到秒" 
                android:layout_marginLeft="12px" 
                android:layout_marginRight="12px" 
                android:textSize="16px" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:id="@+id/showSecSwitch" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" 
            android:paddingTop="12px" 
            android:paddingBottom="12px" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@drawable/border_style_bottom">
                <TextView
                android:text="清理内存使用线程数"
                android:padding="12px"
                android:textSize="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
                <EditText
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextThraed" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" 
            android:paddingTop="12px" 
            android:paddingBottom="12px" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@drawable/border_style_bottom">
                <TextView
                android:text="清理内存填充百分比"
                android:padding="12px"
                android:textSize="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
                <EditText
                    android:maxLength="2"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPercent" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" 
            android:paddingTop="12px" 
            android:paddingBottom="12px" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@drawable/border_style_bottom">
                <TextView
                android:text="Shizuku权限状态"
                android:padding="12px"
                android:textSize="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
                <TextView
                    android:text="未授权"
                    android:padding="12px"
                    android:textSize="16px"
                    android:gravity="right"
                    android:id="@+id/textShziukuStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" 
            android:paddingTop="12px" 
            android:paddingBottom="12px" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:background="@drawable/border_style_bottom">
                <TextView
                android:text="设置背景图"
                android:padding="12px"
                android:textSize="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
                <Button
                    android:text="选择"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSelect" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:text="保存"
        android:padding="12px"
        android:textSize="16px"
        android:id="@+id/textViewSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
        <LinearLayout 
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
        android:text="返回"
        android:padding="12px"
        android:textSize="16px"
        android:id="@+id/textViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>